<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_landing"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/landing_background"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonWeather"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/poppins_semi_bold"
        android:includeFontPadding="false"
        android:text="Weather"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:backgroundTint="@color/buttonSavedImages"
        app:cornerRadius="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNewNotes"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@id/buttonWeather"
        android:fontFamily="@font/poppins_semi_bold"
        android:includeFontPadding="false"
        android:text="New Notes"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:backgroundTint="@color/buttonEditNewImage"
        app:cornerRadius="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSubtitle"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:text="Let's create something new!"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toTopOf="@id/buttonNewNotes"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        android:text="Notes"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toTopOf="@id/textSubtitle"/>


</androidx.constraintlayout.widget.ConstraintLayout>